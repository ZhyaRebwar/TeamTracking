<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RaisinBlack"
    tools:context=".SignUp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/light_blue_earth" />

    <ImageView
        android:id="@+id/imageViewLocationLeft"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_marginTop="65dp"
        android:layout_marginRight="25dp"
        app:srcCompat="@drawable/light_blue_friend_connection" />

    <ImageView
        android:id="@+id/imageViewLocationRight"
        android:layout_centerHorizontal="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="25dp"
        app:srcCompat="@drawable/light_blue_red_location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:layout_marginEnd="210dp"
        android:text="Team"
        android:id="@+id/textV1"
        android:textColor="@color/Ivory"
        android:textSize="22sp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="195dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="110dp"
        android:text=" Tracking"
        android:id="@+id/textV"
        android:textColor="@color/Ivory"
        android:textSize="22sp"></TextView>


    <ImageView
        android:id="@+id/friends_map_location"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textV1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="35dp"
        android:padding="15dp"
        android:elevation="20dp"
        android:background="@drawable/button_background"
        app:srcCompat="@drawable/red_map" />

    <ImageView
        android:id="@+id/friend_acceptance"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textV"
        android:layout_marginTop="50dp"
        android:layout_marginStart="215dp"
        android:padding="15dp"
        android:elevation="20dp"
        android:background="@drawable/button_background"
        app:srcCompat="@drawable/friends_red"
        android:shadowColor="@color/Ivory" />

    <ImageView
        android:id="@+id/friend_request"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/friends_map_location"
        android:layout_marginTop="50dp"
        android:layout_marginStart="35dp"
        android:padding="15dp"
        android:elevation="20dp"
        android:background="@drawable/button_background"
        app:srcCompat="@drawable/add_friend" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/friend_acceptance"
        android:layout_marginTop="50dp"
        android:layout_marginStart="215dp"
        android:padding="15dp"
        android:elevation="20dp"
        android:background="@drawable/button_background"
        app:srcCompat="@drawable/settings" />

    <Button
        android:id="@+id/loginAccount"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_below="@+id/friend_request"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="35dp"

        android:backgroundTint="@color/Poppy"

        android:onClick="logOut"
        android:text="log out"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>