<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RaisinBlack"
    tools:context=".SignUp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:layout_marginEnd="130dp"
        android:layout_centerHorizontal="true"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/Ivory"
        android:textSize="38sp"></TextView>




    <TextView
        android:id="@+id/usernameSettigns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/section_name"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:text="Username: "
        android:textColor="@color/Ivory"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/passwordSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/usernameSettigns"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:text="Password: "
        android:textColor="@color/Ivory"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/phoneNumberSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/passwordSettings"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:text="Phone Number: "
        android:textColor="@color/Ivory"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/emailSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phoneNumberSettings"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:text="Email: "
        android:textColor="@color/Ivory"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/loginAccount"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_below="@+id/emailSettings"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="155dp"
        android:layout_marginRight="35dp"

        android:backgroundTint="@color/Poppy"

        android:onClick="backToHome"
        android:text="Home"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gotoSignUp"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_below="@+id/emailSettings"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="155dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/Poppy"
        android:onClick="gotoEdit"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>